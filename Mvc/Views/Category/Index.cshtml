@using Mvc.Models.Entities;
@model List<Category>

<h2>Kategoriler sayfası, sadece adminler görecek</h2>

@if(Model is not null)
{

    <table class="table">
        <thead>
            <tr>
                <th>#</th>
                <th>Kategori Adı</th>
                <th>Sil</th>
                <th>Güncelle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>@item.CategoryId</th>
                    <td>@item.CategoryName</td>
                    @*<th><a asp-controller="Category" asp-action="Delete" asp-route-categoryId="@item.CategoryId" class="btn btn-danger">Sil</a></th>*@
                    <th>
                        <form asp-action="Delete" asp-route-categoryId="@item.CategoryId">
                            <input type="submit" value="Sil" class="btn btn-danger" />
                        </form>
                    </th>
                    <th><a asp-controller="Category" asp-action="Update" asp-route-categoryId="@item.CategoryId" class="btn btn-warning">Güncelle</a></th>
                </tr>
            }
        </tbody>
    </table>
}

else
{
    <h3>Herhangi bir kayıt bulunamadı</h3>
}

<a asp-controller="Category" asp-action="Add" class="btn btn-primary">Add Category</a>